<addon id="plugin.video.IPTVINT"
       name="IPTVINT"
       version="0.3.3"
       provider-name="Mentality">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.2.0"/>
      </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Mentality stellt vor</summary>
    <description>~~~Mentality wuenscht euch viel Spass~~~</description>
    <platform>all</platform>
  </extension>
</addon>

